---
interface Props {
    class?: string;
    hoverEffect?: boolean;
}

const { class: className, hoverEffect = true } = Astro.props;
---

<div
    class={`
  bg-brand-surface border border-brand-border p-6 
  ${hoverEffect ? "transition-all duration-300 hover:border-brand-accent/30 hover:shadow-[0_0_30px_rgba(0,0,0,0.5)] hover:-translate-y-1 group" : ""}
  ${className}
`}
>
    <slot />
</div>
