---
interface Props {
    href?: string;
    variant?: "primary" | "secondary" | "outline" | "ghost";
    size?: "sm" | "md" | "lg";
    type?: "button" | "submit" | "reset";
    class?: string;
    [key: string]: any;
}

const {
    href,
    variant = "primary",
    size = "md",
    type = "button",
    class: className,
    ...rest
} = Astro.props;

const baseStyles =
    "inline-flex items-center justify-center font-heading tracking-widest uppercase transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-brand-accent/50 focus:ring-offset-2 focus:ring-offset-brand-bg disabled:opacity-50 disabled:cursor-not-allowed";

const variants = {
    primary:
        "bg-brand-accent text-white hover:shadow-[0_0_20px_rgba(155,92,255,0.5)] border border-transparent hover:-translate-y-0.5",
    secondary:
        "bg-brand-surface text-white border border-brand-border hover:border-brand-accent/50 hover:bg-brand-surface/80",
    outline:
        "bg-transparent text-white border border-white/20 hover:bg-white/5 hover:border-white/40",
    ghost: "bg-transparent text-brand-text-secondary hover:text-white hover:bg-white/5",
};

const sizes = {
    sm: "text-sm px-4 py-2",
    md: "text-base px-6 py-3",
    lg: "text-xl px-8 py-4",
};

const classes = [baseStyles, variants[variant], sizes[size], className]
    .filter(Boolean)
    .join(" ");
---

{
    href ? (
        <a href={href} class={classes} {...rest}>
            <slot />
        </a>
    ) : (
        <button type={type} class={classes} {...rest}>
            <slot />
        </button>
    )
}
