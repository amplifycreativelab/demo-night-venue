---
import BaseLayout from "../../layouts/BaseLayout.astro";
import SectionHeader from "../../components/SectionHeader.astro";
import Button from "../../components/Button.astro";
---

<BaseLayout title="Contact | Venue Nights">
    <section class="py-12 md:py-20">
        <div class="container mx-auto px-4 max-w-4xl text-center">
            <SectionHeader
                title="Get In Touch"
                subtitle="Questions? Private hire? Let us know."
            />

            <div class="grid md:grid-cols-3 gap-8 mb-12">
                <div class="p-6 bg-brand-surface border border-white/5 rounded">
                    <h3 class="text-xl font-heading text-white mb-2">
                        Find Us
                    </h3>
                    <p class="text-brand-text-secondary">
                        Fictional details for a non-indexed concept demo.
                    </p>
                </div>
                <div class="p-6 bg-brand-surface border border-white/5 rounded">
                    <h3 class="text-xl font-heading text-white mb-2">
                        Speak To Us
                    </h3>
                    <p class="text-brand-text-secondary">
                        <a
                            href="https://amplifycreativelab.com"
                            target="_blank"
                            rel="nofollow noopener noreferrer"
                            class="hover:text-brand-accent transition-colors"
                            >amplifycreativelab.com</a
                        >
                    </p>
                </div>
                <div class="p-6 bg-brand-surface border border-white/5 rounded">
                    <h3 class="text-xl font-heading text-white mb-2">
                        Follow Us
                    </h3>
                    <p class="text-brand-text-secondary mb-4">
                        See the night unfold.
                    </p>
                    <a
                        href="#"
                        class="inline-block text-brand-accent hover:text-white transition-colors uppercase font-bold tracking-wider text-sm"
                    >
                        @VenueNights
                    </a>
                </div>
            </div>

            <div
                class="bg-brand-surface p-8 border border-white/5 rounded text-left max-w-2xl mx-auto"
            >
                <form class="space-y-4">
                    <div>
                        <label
                            class="block text-xs font-bold text-brand-text-secondary uppercase tracking-wider mb-2"
                            >Name</label
                        >
                        <input
                            type="text"
                            class="w-full bg-brand-bg border border-white/10 px-4 py-3 text-white focus:border-brand-accent focus:outline-none"
                        />
                    </div>
                    <div>
                        <label
                            class="block text-xs font-bold text-brand-text-secondary uppercase tracking-wider mb-2"
                            >Email</label
                        >
                        <input
                            type="email"
                            class="w-full bg-brand-bg border border-white/10 px-4 py-3 text-white focus:border-brand-accent focus:outline-none"
                        />
                    </div>
                    <div>
                        <label
                            class="block text-xs font-bold text-brand-text-secondary uppercase tracking-wider mb-2"
                            >Message</label
                        >
                        <textarea
                            rows="4"
                            class="w-full bg-brand-bg border border-white/10 px-4 py-3 text-white focus:border-brand-accent focus:outline-none"
                        ></textarea>
                    </div>
                    <Button type="submit" class="w-full">Send Message</Button>
                </form>
            </div>
        </div>
    </section>
</BaseLayout>
